---
import Layout from "../layouts/Layout.astro";
import MenuBlack from "../components/MenuBlack.astro";
import MobileMenu from "../components/MobilMenu.astro";
import Top from "../components/Top.astro";
import LogoScroll from "../components/index/LogoScroll.astro";
import CardServiciosIndexDos from "../components/index/CardServiciosIndexDos.astro";
import BuscarDominios from "../components/index/BuscarDominios.astro";
import TemasEnvato from "../components/index/TemasEnvato.astro";
import CardHosting from "../components/index/CardHosting.astro";
import CardStreamingRadio from "../components/index/CardStreamingRadio.astro";
import StreamigCard from "../components/index/StreamingCard.astro";
import Testimonio from "../components/index/Testimonial.astro";
import Footer from "../components/Footer.astro";

import BotonUno from "../components/BotonUno.astro";
import BotonDos from "../components/BotonDos.astro";
import BotonTres from "../components/BotonTres.astro";
import BotonCuatro from "../components/BotonCuatro.astro";
---

<Layout title="Hosting Internet Services | Radio y Tv Streaming">
	<main>
		<!-- INICIA CODIGO DE HEADER MENU INDEX -->

		<header class="flex flex-col justify-between">
			<div>
				<Top />
				<div class="hidden lg:block">
					<MenuBlack />
				</div>
				<div class="pt-4 lg:hidden"><MobileMenu /></div>
			</div>

			<section class="container mx-auto">

				<section class="grid lg:grid-cols-12 md:grid-cols-3 sm:grid-cols-1 gap-8 mt-20 md:p-0 p-4">
					<div class="lg:col-[1/4] md:col-[1/-1] place-content-end">
						<p class="uppercase font-semibold tracking-widest pb-4 text-[14px]">Desde 2014</p>
						<p>Nos aseguramos de que tu sitio web sea <strong>rápido, seguro</strong> y esté <strong><span class="italic font-semibold">siempre activo</span></strong></p>
					</div>
					<div class="lg:col-[4/6] place-content-center lg:inline hidden">
						<img src="/img/rounde-vector.webp" alt="imagen">
					</div>
					<div class="lg:col-[6/-1] md:col-[1/-1] place-content-center">
						<h1>Alojamiento web premium, tv y radio <span class="italic font-light">streaming para ti...</span></h1>
					</div>
				</section>
				<section class="mt-24">
					<img class="w-full object-cover" src="/img/img_header5.avif" alt="Imagen">
				</section>

			<!-- INICIA CODIGO DE LOGOS DE CLIENTES -->

				<section class="contenedor mx-auto pl-2 pr-2 text-center font-semibold mt-9 mb-8">
					<p>
						Alojando a <strong>1.245 sitios,</strong> <span class="italic">clientes satisfechos</span> <strong>+500</strong>
					</p>
				</section>

				<section class="contenedor__logos pl-2 pr-2">
					<LogoScroll />
				</section>

				<!-- FIN CODIGO DE LOGOS DE CLIENTES -->


				<section class="grid lg:grid-cols-[repeat(15,1fr)] p-10 my-48">
					<div class="col-[1/4]"></div>
					<div class="col-[4/13]">
					<h2 class="text-black">Nos aseguramos de que tu sitio web sea rápido, seguro y esté siempre activo, para que tus visitantes y motores de búsqueda confíen en ti. Garantizado.</h2>
					<div>
												<div class="mt-10 flex flex-col md:flex-row">
							<div>
								<BotonUno
									href="/hosting-cloud/"
									title="Comenzar ahora"
								/>
							</div>
							<div>
								<BotonDos
									href="/paginas-web/"
									title="Crear sitio web"
								/>
							</div>
						</div>
					</div>
					</div>
					<div class="col-[13/-1]"></div>
				</section>
			</section>



		</header>

		<!-- FIN CODIGO DE HEADER MENU INDEX -->

		<!-- INICIA CODIGO SECCION MAS VELOCIDAD -->


		<section class="grid lg:grid-cols-4 md:grid-cols-2 sm:grid-cols-1 mb-24">
			<div class="border-[1px] border-t-gray-400 border-r-gray-400 border-b-gray-400">
				<CardServiciosIndexDos href="/hosting-linux" img_uno="/img/hostinindex1.png" title1="Alojamiento Compartido" title2="Web Hosting Linux">
			</div>
			<div class="border-[1px] border-t-gray-400 border-r-gray-400 border-b-gray-400">
				<CardServiciosIndexDos href="/hosting-cloud" img_uno="/img/hostinindex2.png" title1="Plataforma Potente" title2="Web Hosting Cloud">
			</div>
			<div class="border-[1px] border-t-gray-400 border-r-gray-400 border-b-gray-400">
				<CardServiciosIndexDos href="/sonicpanel" img_uno="/img/hostinindex3.png" title1="Potenciado por SonicPanel" title2="Radio Streaming">
			</div>
			<div class="border-[1px] border-t-gray-400  border-b-gray-400">
				<CardServiciosIndexDos href="/tv-streaming" img_uno="/img/hostinindex4.png" title1="Plataforma Robusta y Confiable" title2="Tv Streaming">
			</div>
		</section>


		<!-- FIN CODIGO SECCION MAS VELOCIDAD -->

		<!-- INICIA CODIGO SECCION TEMAS GRATIS ENVATO -->

		<section class="contenedor mx-auto mt-[10rem] mb-[10rem] px-5">
			<TemasEnvato />
		</section>

		<!-- FIN CODIGO SECCION TEMAS GRATIS ENVATO -->

		<!-- INICIA CODIGO SECCION PORQUE ELEGIR servistream -->

		<section
			class="contenedor mx-auto mt-[10rem] mb-[10rem] grid grid-cols-1 gap-2 px-5 lg:grid-cols-2"
		>
			<div class="flex flex-col justify-center">
				<h2 class="text-4xl lg:text-5xl">
					¿Por qué elegir servistream.net?
				</h2>
				<h5 class="mb-5">
					cPanel es el panel de control estándar de la industria. En
					servistream.net desarrollamos la plataforma de alojamiento
					cPanel definitiva: rápida, segura y fácil de usar .
				</h5>

				<div>
					<BotonTres
						href="/hosting-cloud/"
						title="Ver nuestro planes"
					/>
				</div>
			</div>
			<div>
				<div
					class="grid grid-cols-1 grid-rows-auto gap-2 md:grid-cols-2 lg:grid-cols-2"
				>
					<CardHosting
						src="/img/SolarCodeScanOutline.svg"
						title="cPanel con CloudLinux"
						content="¡Hasta 4 GB de RAM por cuenta de cPanel con CloudLinux, que le permite ejecutar versiones de PHP desde PHP 5.2 hasta 8.0!"
					/>
					<CardHosting
						src="/img/SolarArchiveUpMinimlisticBroken.svg"
						title="Jetbackup incluido"
						content="Explore, restaure y descargue copias de seguridad utilizando la herramienta Jetbackup directamente en su panel de control de cPanel."
					/>
					<CardHosting
						src="/img/SolarLockPasswordBroken.svg"
						title="SSL gratuitos ilimitados"
						content="Certificados SSL para cada dominio y subdominio que agregue a su panel de control."
					/>
					<CardHosting
						src="/img/SolarServerSquareBroken.svg"
						title="Servidores NvME"
						content="Ejecutamos los últimos y mejores servidores en la nube, con discos NvME de alto rendimiento."
					/>
				</div>
			</div>
		</section>

		<!-- FIN CODIGO SECCION PORQUE ELEGIR servistream -->

		<!-- INICIA CODIGO SECCION RADIO STREAMING -->

		<section class="contenedor mx-auto mt-20">
			<StreamigCard />
		</section>

		<section class="bg__streaming__radio__index mt-[-20rem]">
			<div class="contenedor mx-auto pt-[25rem]"></div>

			<div
				class="grid gap-8 grid-cols-1 grid-rows-auto contenedor__logos text-white pb-20 md:grid-cols-2 lg:grid-cols-3"
			>
				<CardStreamingRadio
					src="/img/SolarCheckSquareBroken.svg"
					title="Fácil Instalación"
					content="Hazlo fácil y sin complicaciones con nuestra guía de instalación"
				/>
				<CardStreamingRadio
					src="/img/SolarHeadphonesRoundSoundLineDuotone.svg"
					title="ACC+ o MP3"
					content="Tú decides como quieres que suene la estación de radio con Icecast o Shoutcast"
				/>
				<CardStreamingRadio
					src="/img/SolarServer2Broken.svg"
					title="Disco Sólido"
					content="300% más velocidad leyendo las canciones en función automática AutoDj"
				/>
				<CardStreamingRadio
					src="/img/SolarCallChatRoundedLineDuotone.svg"
					title="Soporte"
					content="Asistencia permanente y monitoreo de cada servidor durante las 24hs"
				/>
				<CardStreamingRadio
					src="/img/SolarCardTransferLinear.svg"
					title="Control Total"
					content="Transmite en vivo o AutoDJ, tú decides como manejar tu estación de radio"
				/>
				<CardStreamingRadio
					src="/img/SolarCpuOutline.svg"
					title="Hardware"
					content="Servidores rápidos con 50 GB de RAM y procesadores Intel Xeon de 10 núcleos"
				/>
			</div>

			<div
				class="contenedor mx-auto pb-20 flex items-center justify-center"
			>
				<BotonCuatro href="/sonicpanel/" title="Ver todos los planes" />
			</div>
		</section>

		<!-- FIN CODIGO SECCION RADIO STREAMING -->

		<!-- INICIA CODIGO SECCION TESTIMONIO -->

		<Testimonio />

		<!-- FIN CODIGO SECCION TESTIMONIO -->

		<Footer />

		<!-- CODIGO DE CONTACTO TELEFONO-->
		<div
			class="flex items-end justify-end fixed bottom-0 right-0 mb-4 mr-4 z-10"
		>
			<div>
				<a
					title="Tienes Dudas"
					href="https://walink.co/4f797c"
					target="_blank"
					class="block w-16 h-16 rounded-full transition-all shadow hover:shadow-lg transform hover:scale-110 hover:rotate-12"
				>
					<img
						class="object-cover object-center w-full h-full rounded-full"
						src="https://cdn2.iconfinder.com/data/icons/2018-social-media-app-logos/1000/2018_social_media_popular_app_logo-whatsapp-512.png"
						alt="Icono"
					/>
				</a>
			</div>
		</div>
	</main>
</Layout>

<style lang="scss">
	.contenedor__logos {
		max-width: 55rem;
		margin: 0 auto;
	}

	main {
		.color__principal {
			color: var(--color-primario);
		}
		header {
			background-position: center;
			background-size: cover;
			background-repeat: no-repeat;
			/*
			background-image: linear-gradient(
				to right top,
				#0e141b,
				#111820,
				#141b26,
				#171f2b,
				#1a2231,
				#1a2231,
				#1a2231,
				#1a2231,
				#171f2b,
				#141b26,
				#111820,
				#0e141b
			);*/

		}

		.bg__streaming__radio__index {
			background-color: var(--color-oscuro);
			clip-path: polygon(0 10%, 100% 0, 100% 100%, 0 100%);
		}
	}
</style>
