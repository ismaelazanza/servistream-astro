---
interface Props {
    href: string;
    title: string;
}

const { href, title } = Astro.props;
---

<a
class="bg-[#00b285] hover:bg-[#378671] text-white font-semibold py-2 px-8 inline-block rounded-lg transition ease-in-out border border-transparent mb-4 lg:mb-0 md:mr-2"
href={href}>
{title}
</a>
