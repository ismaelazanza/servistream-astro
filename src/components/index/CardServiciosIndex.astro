---
interface Props {
    title1: string;
    title2: string;
    img: string;
    href: string;
}

const { href, title1, title2, img } = Astro.props;
---

<a class="traslate-y group" href={href}>
    <div class="box__services__index px-8 py-8 box__shadow__card">
        <img src={img} width="60" alt="Hosting Linux" />
        <div class="flex items-center justify-between mt-8">
            <p class="text-2xl font-semibold">{title1} <br /> {title2}</p>
            <img class="opacity-0 h-8 w-8 group-hover:opacity-100 transition ease-in-out group-hover:transform group-hover:translate-x-1" src="/img/SolarArrowRightUpLineDuotone.svg" alt="Icono">
        </div>
    </div>
</a>

<style>
    .box__services__index {
        background-color: #fff;
        border-radius: 3rem;
    }

    .traslate-y {
        transition: all 0.2s ease-out;
    }

    .traslate-y:hover {
        transform: translateY(-6px);
    }

    .box__shadow__card {
        box-shadow: rgba(200, 210, 219, 0.2) 0px 8px 24px;
    }
</style>
