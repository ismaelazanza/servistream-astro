---
interface Props {
    title: string;
    content: string;
    src: string;
}

const { src, title, content } = Astro.props;
---

<div
    class="border__card px-6 py-6 text-center flex flex-col justify-center items-center pb-20"
>
    <img class="color__icono pb-3" src={src} width="40" alt="Icono" />
    <h2 class="font-semibold pt-3 pb-2 text-2xl text-white">{title}</h2>
    <p class="text-base text-white">{content}</p>
</div>

<style>
    img {
        color: #fff;
    }

    .color__icono {
        color: #fff;
    }

    .border__card {
        /* From https://css.glass */
        background: rgba(255, 255, 255, 0.009);
        border-radius: 16px;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(5px);
        -webkit-backdrop-filter: blur(5px);
        border: 1px solid rgba(255, 255, 255, 0.084);
    }
</style>
