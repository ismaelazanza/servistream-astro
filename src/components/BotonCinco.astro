---
interface Props {
    hrefBoton: string;
    titleBoton: string;
}

const { hrefBoton, titleBoton } = Astro.props;

---

<a class="bg-[#00b285] hover:bg-[#378671] group py-2 px-8 inline-block rounded-lg transition ease-in-out border border-transparent mb-4 lg:mb-0 md:mr-2" href={hrefBoton}>
    <div class="flex items-center">
        <p class="text-white font-semibold">{titleBoton}</p>
        <img class="h-4 w-4 ml-3 opacity-50 group-hover:opacity-100 transition ease-in-out group-hover:transform group-hover:translate-x-1" src="/img/SolarArrowRightUpLineDuotoneWhite.svg" alt="Icono">
    </div>
</a>
