---
interface Props {
    plan: string;
    precio: string;
    mes: string;
    opcion: string
    des1: string;
    des2: string;
    des3: string;
    des4: string;
    des5: string;
    des6: string;
    des7: string;
    des8: string;
    des9: string;
    link: string;
}

const {
    plan,
    precio,
    mes,
    opcion,
    des1,
    des2,
    des3,
    des4,
    des5,
    des6,
    des7,
    des8,
    des9,
    link,
} = Astro.props;
---

<section class="hover__planes">
    <article
        class="flex h-12 title__planes__descuento items-center  rounded-tl-lg rounded-tr-lg"
    >
        <p class="color__titulo  uppercase mb-5 font-semibold text-sm tracking-wider">DESCUENTO ESPECIAL</p>
    </article>

    <div class="rounded-bl-lg rounded-br-lg">
        <h2 class="font-bold text-3xl">{plan}</h2>
        <p class="text-4xl font-extrabold">{precio}</p>
        <p class="mb-5 text-sm font-semibold">{mes}</p>
        <p class="mb-5">{opcion}</p>
        <p class="underline text-sm font-semibold"> <strong>{des1}</strong> de espacio</p>
        <p class="text-sm font-semibold"> <strong>{des2}</strong> tr√°fico</p>
        <p class="text-sm font-semibold">{des3}</p>
        <p class="text-sm font-semibold">{des4}</p>
        <p class="underline text-sm font-semibold">{des5}</p>
        <p class="text-sm font-semibold">{des6}</p>
        <p class="text-sm font-semibold">{des7}</p>
        <p class="text-sm font-semibold">{des8}</p>
        <p class="text-sm font-semibold">{des9}</p>
        <a class="bg-principal hover:bg-principalDegra text-white font-bold py-2 px-4 rounded-lg inline-block mt-5" href={link}>Comprar Ahora <i class="fa-solid fa-chevron-right text-xs pl-2"></i></a>
    </div>
</section>

<style>

    .color__titulo {
        color: var(--color-primario);
    }

