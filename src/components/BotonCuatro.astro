---
interface Props {
    href: string;
    title: string;
}

const { href, title, } = Astro.props;
---

<a class="group underline text-white" href={href}>
    <div class="flex items-center">
        <p class="text-white font-semibold">{title}</p>
        <img class="h-4 w-4 ml-3 opacity-50 group-hover:opacity-100 transition ease-in-out group-hover:transform group-hover:translate-x-1" src="/img/SolarArrowRightBoldDuotone.svg" alt="Icono">
    </div>
</a>
